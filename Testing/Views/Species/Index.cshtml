@model IEnumerable<Species>

<h2>Species</h2>

<div style="display: block">
    <a href="/Species/InsertSpecies/">Add a New Species</a>
</div>

<table class="table">
    <tr>        
        <th>Species Name</th>
        <th>Pronunciation</th>
        <th>Meaning</th>
        <th>Genus</th>
    </tr>

    @foreach (var species in @Model)
    {
        <tr>
            <td><a href=/Species/ViewSpecies/@species.SpeciesID>@species.SpeciesName</a></td>
            <td>@species.Pronunciation</td>
            <td>@species.Meaning</td>
            <td>@species.GenusNames[@species.GenusID]</td>            
        </tr>
    }

</table>
