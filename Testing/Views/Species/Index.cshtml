@model IEnumerable<Species>

<h2>Species</h2>

@*<div style="display: block">
    <a href="/Species/InsertSpecies/">Add Orchid</a>
</div>*@

<div class="button-wrapper">
    <a href="/Species/InsertSpecies/" class="btn btn-primary">Add Orchid</a>
</div>

<table class="table">
    <tr>
        <th></th>
        <th>Genus</th>
        <th>Species Name</th>
        <th>Pronunciation</th>
        <th>Meaning</th>
        <th>Taxonomist</th>
        <th>Discovered</th>
        <th>Country</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Mottled Leaf</th>
    </tr>

    @foreach (var species in Model)
    {
        <tr>
            <td><img src="@Url.Action("GetImage", "Species", new { id = species.SpeciesID })" alt="Species Image" class="orchid-image" /></td>
            <td>@species.GenusNames[species.GenusID]</td>
            <td><a href="@Url.Action("ViewSpecies", "Species", new { id = species.SpeciesID })">@species.SpeciesName</a></td>
            <td>@species.Pronunciation</td>
            <td>@species.Meaning</td>
            <td>@species.Taxonomist</td>
            <td>@species.DiscoveryYear</td>
            <td>@species.CountryOfOrigin</td>
            <td>@species.Latitude</td>
            <td>@species.Longitude</td>
            <td>@species.MottledLeaf</td>
        </tr>
    }
</table>
